{% extends 'base.html.twig' %}


    {% block body %}
        <h1> Inscription sur le site</h1>

        {{ form_start(formUser) }}
        {{ form_row(formUser.username, {'lable': 'Nom d\'utilisateur',
                                    'attr':{'placeholder': 'Nom d\'utilisateur....'}}) }}
        {{ form_row(formUser.email, {'lable': 'Adresse email',
            'attr':{'placeholder': 'Adresse email....'}}) }}
        {{ form_row(formUser.password, {'lable': 'Mot de passe',
            'attr':{'placeholder': 'Mot de passe....'}}) }}
        {{ form_row(formUser.confirm_password, {'lable': 'Confirmation du mot de passe',
            'attr':{'placeholder': 'Confirmez votre mot de passe....'}}) }}
        <button type="submit" class="btn btn-success">Inscription</button>
        {{ form_end(formUser) }}

    {% endblock %}